  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {},
  "nyc": {
    "require": [
      "../../node_modules/ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "src/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "cache": true
